<div class="container px-5 px-sm-0">
 <div class="row">

  <div class="col-md-3">
   <h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100) %>
   <table class="table">
   <tbody>
    <tr>
     <th>name</th>
     <th><%= user.name %></th>
    </tr>
    <tr>
     <th>introduction</th>
     <th><%= user.introduction %></th>
    </tr>
   </tbody>
   </table>

  <div class="row">
   <button type="button" class="btn btn-outline-secondary btn-block"><%= link_to edit_user_path(user.id), class: "nav-link text-secondary" do %><i class="fas fa-user-cog"></i>
   <% end %>
   </button>
  <h2 class="mt-3">New book</h2><br>
  <%= form_with model: book, url: books_path, method: :post do |f| %>
  <p>Title</p>
  <div><%= f.text_field :title %></div>

  <P>Opinion</P>
  <%= f.text_area :body %>

 <br> <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>
  </div>
  </div>